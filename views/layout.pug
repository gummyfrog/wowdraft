	body
		header
			div#logged-in
				p#username
				a(href="/logout").
					logout
					<i class="fas fa-sign-out-alt"></i>

			div#logged-out
				a(href="/login").
					login
					<i class="fas fa-sign-in-alt"></i>

			div#navigation
				a(href="/leagues").
					<i class="fas fa-book"></i>
					all leagues
				br
				a(href="/leagues/create").
					<i class="fas fa-book-open"></i>
					 new league

		block content

	footer
		script.
			$("#logged-in").hide();

			var username = "#{user_session_name}"

			if(!{user_session_auth}) {
				$("#logged-out").hide();
				$("#logged-in").show();
				$("#username").text(username);
			}

